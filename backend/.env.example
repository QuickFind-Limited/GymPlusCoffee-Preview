# Backend environment configuration
# Copy this file to backend/.env and fill in the required secrets before running the backend service.

# Required: Claude API Key
ANTHROPIC_API_KEY="your-anthropic-api-key"

# Required: Atla Insights Monitoring
ATLA_INSIGHTS_API_KEY="your-atla-insights-key"
ATLA_ENVIRONMENT="development"

# Optional: Docker port mapping (used in docker-compose.yml)
PORT=8000
HOST=0.0.0.0

# Optional: Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Supabase configuration for auth verification
SUPABASE_URL="https://your-supabase-project.supabase.co"
SUPABASE_ANON_KEY="your-supabase-anon-key"

# Logfire (optional)
LOGFIRE_TOKEN=""

# NetSuite Configuration
GYM_PLUS_COFFEE_CONSUMER_ID="your-consumer-id"
GYM_PLUS_COFFEE_CONSUMER_SECRET="your-consumer-secret"
GYM_PLUS_COFFEE_TOKEN_ID="your-token-id"
GYM_PLUS_COFFEE_TOKEN_SECRET="your-token-secret"
NETSUITE_ACCOUNT_ID="your-account-id"
NETSUITE_URL_ACCOUNT="your-url-account"
